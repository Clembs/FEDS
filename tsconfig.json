{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "paths": {
      "$lib": ["./src/lib/index.ts"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": ["."],
  "exclude": ["dist", "node_modules"]
}